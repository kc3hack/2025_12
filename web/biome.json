{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      "./src/components/ui/**/*"
    ],
    "include": [
      "./src/**/*"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "warn",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "useConst": "warn",
        "useImportType": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "arrowParentheses": "asNeeded"
    }
  }
}
